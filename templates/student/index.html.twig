{% extends 'base.html.twig' %}

{% block title %}Student index{% endblock %}

{% block body %}
    <h1 class="display-4">Student Index</h1>
    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Surname</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for student in students %}
            <tr>
                <td>{{ student.id }}</td>
                <td>{{ student.name }}</td>
                <td>{{ student.surname }}</td>
                <td>
                    <a class="btn btn-info" href="{{ path('app_student_show', {'id': student.id}) }}">Show</a>
                    <a class="btn btn-primary" href="{{ path('app_student_edit', {'id': student.id}) }}">Edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">No records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


    <a class="btn btn-success" href="{{ path('app_student_new') }}">Create New</a>
{% endblock %}
